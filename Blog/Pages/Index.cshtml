@page
@model IndexModel
@{
    ViewData["Title"] = "Blog";
}


<form method="post">
    
    @foreach (var _section in Model.Sections)
    {
        <h3 style="margin-top: 10px;">@_section.Name ( @_section.ArticlesCount )</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
            
            @foreach (var article in _section.Articles)
            {
                @Html.HiddenFor(m => @article.Id)
                <tr>
                    <td>
                        <a asp-page="./Article/Details"*@
                           asp-route-id="@article.Id">
                            @article.Title
                        </a>
                    </td>
                    <td>
                        @article.Date
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</form>
