@page
@model DetailsModel

@{
    ViewBag.Title = "Article";
}

<h2>@Model.ArticleModel.Title</h2>

<div class="row">
    <div class="col-md-12">
        <img src="@Url.Content(Model.ArticleModel.ImageUrl)" 
                width="100%" 
                alt="" />
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h7>@Model.ArticleModel.Date.ToString("MM/dd/yyyy")</h7>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <span>@Model.ArticleModel.Text</span>
    </div>
</div>

<a class="btn btn-primary" 
   asp-page="/Index">
    Back
</a>
